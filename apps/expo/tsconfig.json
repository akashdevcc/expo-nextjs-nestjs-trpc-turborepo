{
  "extends": "@acme/tsconfig/esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "types": ["nativewind/types"]
  },
  "include": ["src", "*.ts", "*.js", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "build", "dist", ".expo"]
}
